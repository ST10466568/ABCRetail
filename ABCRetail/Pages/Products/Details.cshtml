@page "{id}"
@model ABCRetail.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-box me-2"></i>Product Details
        </h2>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Product?.RowKey" class="btn btn-outline-primary me-2">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
            <a asp-page="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Products
            </a>
        </div>
    </div>

    @if (Model.Product == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Product not found.
        </div>
        <a asp-page="Index" class="btn btn-primary">Return to Products</a>
        return;
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card slide-in">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                        {
                            <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" class="me-3" style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;" />
                        }
                        else
                        {
                            <div class="bg-light me-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; border-radius: 8px;">
                                <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                            </div>
                        }
                        <div>
                            <h4 class="mb-1">@Model.Product.Name</h4>
                            <p class="text-muted mb-0">Product ID: @Model.Product.RowKey</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Brand</label>
                            <div class="form-control-plaintext">
                                @Model.Product.Brand
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Category</label>
                            <div class="form-control-plaintext">
                                <span class="badge bg-primary">@Model.Product.Category</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Price</label>
                            <div class="form-control-plaintext">
                                <span class="h5 text-success mb-0">$@Model.Product.Price.ToString("F2")</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Stock Quantity</label>
                            <div class="form-control-plaintext">
                                @if (Model.Product.StockQuantity > 0)
                                {
                                    <span class="badge bg-success">@Model.Product.StockQuantity units</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Description</label>
                        <div class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Product.Description))
                            {
                                @Model.Product.Description
                            }
                            else
                            {
                                <span class="text-muted">No description available</span>
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Status</label>
                            <div class="form-control-plaintext">
                                @if (Model.Product.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Created Date</label>
                            <div class="form-control-plaintext">
                                @Model.Product.CreatedDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
                            </div>
                        </div>
                    </div>

                    @if (Model.Product.LastModifiedDate.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Last Modified</label>
                            <div class="form-control-plaintext">
                                @Model.Product.LastModifiedDate.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card slide-in">
                <div class="card-header">
                    <h6 class="mb-0">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="./Edit" asp-route-id="@Model.Product.RowKey" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit Product
                        </a>
                        <button class="btn btn-outline-success" onclick="alert('Order functionality coming soon!')">
                            <i class="bi bi-cart-plus me-2"></i>Add to Order
                        </button>
                        <button class="btn btn-outline-info" onclick="alert('Inventory tracking coming soon!')">
                            <i class="bi bi-box-seam me-2"></i>Track Inventory
                        </button>
                        <button class="btn btn-outline-danger" onclick="confirmDelete()">
                            <i class="bi bi-trash me-2"></i>Delete Product
                        </button>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
            {
                <div class="card slide-in mt-3">
                    <div class="card-header">
                        <h6 class="mb-0">Product Image</h6>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid rounded" style="max-height: 300px;" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
function confirmDelete() {
    if (confirm('Are you sure you want to delete this product? This action cannot be undone.')) {
        window.location.href = '@Url.Page("./Delete", new { id = Model.Product?.RowKey })';
    }
}
</script>


