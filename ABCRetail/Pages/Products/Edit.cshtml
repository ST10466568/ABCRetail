@page "{id}"
@model ABCRetail.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-pencil me-2"></i>Edit Product
        </h2>
        <a asp-page="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Products
        </a>
    </div>

    @if (Model.Product == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Product not found.
        </div>
        <a asp-page="Index" class="btn btn-primary">Return to Products</a>
        return;
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card slide-in">
                <div class="card-header">
                    <h5 class="mb-0">Edit Product: @Model.Product.Name</h5>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Product.RowKey" />
                        <input type="hidden" asp-for="Product.PartitionKey" />
                        <input type="hidden" asp-for="Product.CreatedDate" />
                        <input type="hidden" asp-for="Product.ImageUrl" />
                        
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Product.Name" class="form-control" placeholder="Product Name" />
                                    <label asp-for="Product.Name">Product Name</label>
                                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Product.Price" class="form-control" placeholder="Price" type="number" step="0.01" min="0" />
                                    <label asp-for="Product.Price">Price</label>
                                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Product.Brand" class="form-control" placeholder="Brand" />
                                    <label asp-for="Product.Brand">Brand</label>
                                    <span asp-validation-for="Product.Brand" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <select asp-for="Product.Category" class="form-select">
                                        <option value="">Select Category</option>
                                        <option value="Electronics">Electronics</option>
                                        <option value="Clothing">Clothing</option>
                                        <option value="Home & Garden">Home & Garden</option>
                                        <option value="Sports">Sports</option>
                                        <option value="Books">Books</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <label asp-for="Product.Category">Category</label>
                                    <span asp-validation-for="Product.Category" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Product.StockQuantity" class="form-control" placeholder="Stock Quantity" type="number" min="0" />
                                    <label asp-for="Product.StockQuantity">Stock Quantity</label>
                                    <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="ProductImage" class="form-control" type="file" accept="image/*" />
                                    <label asp-for="ProductImage">New Product Image (optional)</label>
                                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Current Image</label>
                                <div>
                                    <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <div class="form-floating">
                                <textarea asp-for="Product.Description" class="form-control" placeholder="Description" style="height: 100px"></textarea>
                                <label asp-for="Product.Description">Description</label>
                                <span asp-validation-for="Product.Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Product.IsActive" class="form-check-input" />
                                <label asp-for="Product.IsActive" class="form-check-label">
                                    Active Product
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Update Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


