@page
@model ABCRetail.Pages.DiagnosticModel
@{
    ViewData["Title"] = "Diagnostic";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-tools"></i>
                        Azure Storage Diagnostic
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Azure Connection Status</h5>
                            <div class="mb-3">
                                <strong>Table Service:</strong>
                                @if (Model.IsTableServiceConnected)
                                {
                                    <span class="badge bg-success">Connected</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Disconnected</span>
                                }
                            </div>
                            <div class="mb-3">
                                <strong>Blob Service:</strong>
                                @if (Model.IsBlobServiceConnected)
                                {
                                    <span class="badge bg-success">Connected</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Disconnected</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5>Data Status</h5>
                            <div class="mb-3">
                                <strong>Customers:</strong>
                                <span class="badge bg-info">@Model.CustomerCount</span>
                            </div>
                            <div class="mb-3">
                                <strong>Products:</strong>
                                <span class="badge bg-info">@Model.ProductCount</span>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-12">
                            <h5>Configuration</h5>
                            <div class="mb-3">
                                <strong>Table SAS URL:</strong>
                                <small class="text-muted d-block">@Model.TableSasUrl</small>
                            </div>
                            <div class="mb-3">
                                <strong>Connection String:</strong>
                                <small class="text-muted d-block">@Model.ConnectionString</small>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-12">
                            <h5>Actions</h5>
                            <form method="post" class="d-inline">
                                <button type="submit" name="action" value="testConnection" class="btn btn-primary me-2">
                                    <i class="bi bi-plug"></i> Test Connection
                                </button>
                                <button type="submit" name="action" value="seedData" class="btn btn-success me-2">
                                    <i class="bi bi-database-add"></i> Seed Data
                                </button>
                                <button type="submit" name="action" value="refreshData" class="btn btn-info me-2">
                                    <i class="bi bi-arrow-clockwise"></i> Refresh Data Counts
                                </button>
                                <button type="submit" name="action" value="debugRetrieval" class="btn btn-warning me-2">
                                    <i class="bi bi-bug"></i> Debug Retrieval
                                </button>
                                <button type="submit" name="action" value="httpRetrieval" class="btn btn-danger me-2">
                                    <i class="bi bi-globe"></i> HTTP Retrieval (Postman)
                                </button>
                                <button type="submit" name="action" value="testUrls" class="btn btn-secondary me-2">
                                    <i class="bi bi-link-45deg"></i> Test URLs Directly
                                </button>
                                <button type="submit" name="action" value="showConfig" class="btn btn-dark me-2">
                                    <i class="bi bi-gear"></i> Show Config
                                </button>
                                
                                <button type="submit" name="action" value="testWorkingFetcher" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Test Working Fetcher
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-info mt-3">
                            @Model.Message
                        </div>
                    }
                    
                    @if (Model.LogMessages.Any())
                    {
                        <div class="mt-4">
                            <h5>Detailed Log</h5>
                            <div class="border rounded p-3 bg-light" style="max-height: 400px; overflow-y: auto;">
                                @foreach (var logMessage in Model.LogMessages)
                                {
                                    <div class="mb-1">@logMessage</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
