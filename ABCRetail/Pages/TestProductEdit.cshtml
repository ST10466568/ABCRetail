@page
@model ABCRetail.Pages.TestProductEditModel
@{
    ViewData["Title"] = "Test Product Edit";
}

<div class="container mt-4">
    <h1 class="text-primary">üîß Test Product Edit Functionality</h1>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>üì¶ Test Product Retrieval</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="TestGetProduct">
                        <div class="form-group">
                            <label for="productId">Product ID to Test:</label>
                            <input type="text" class="form-control" id="productId" name="productId" 
                                   placeholder="Enter product ID (e.g., 03f6e753-632f-4893-8d07-f417b6f445a2)" />
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">üîç Test Get Product</button>
                    </form>
                    
                    @if (!string.IsNullOrEmpty(Model.TestResult))
                    {
                        <div class="alert alert-info mt-3">
                            <h6>Test Result:</h6>
                            <pre>@Model.TestResult</pre>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>üîß Test Product Update</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="TestUpdateProduct">
                        <div class="form-group">
                            <label for="updateProductId">Product ID to Update:</label>
                            <input type="text" class="form-control" id="updateProductId" name="productId" 
                                   placeholder="Enter product ID" />
                        </div>
                        <div class="form-group">
                            <label for="newName">New Name:</label>
                            <input type="text" class="form-control" id="newName" name="newName" 
                                   placeholder="Enter new product name" />
                        </div>
                        <div class="form-group">
                            <label for="newPrice">New Price:</label>
                            <input type="number" step="0.01" class="form-control" id="newPrice" name="newPrice" 
                                   placeholder="Enter new price" />
                        </div>
                        <button type="submit" class="btn btn-warning mt-2">üîß Test Update Product</button>
                    </form>
                    
                    @if (!string.IsNullOrEmpty(Model.UpdateResult))
                    {
                        <div class="alert alert-warning mt-3">
                            <h6>Update Result:</h6>
                            <pre>@Model.UpdateResult</pre>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>üìä Available Products</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="ListProducts">
                        <button type="submit" class="btn btn-info">üìã List All Products</button>
                    </form>
                    
                    @if (Model.Products != null && Model.Products.Any())
                    {
                        <div class="table-responsive mt-3">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Category</th>
                                        <th>Partition Key</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td><small>@product.RowKey</small></td>
                                            <td>@product.Name</td>
                                            <td>$@product.Price</td>
                                            <td>@product.Category</td>
                                            <td><small>@product.PartitionKey</small></td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" 
                                                        onclick="setProductId('@product.RowKey')">
                                                    Use for Test
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>üîç Product Recovery & Diagnostics</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="RecoverProduct">
                        <div class="form-group">
                            <label for="recoverProductId">Product ID to Recover:</label>
                            <input type="text" class="form-control" id="recoverProductId" name="productId" 
                                   placeholder="Enter missing product ID" />
                        </div>
                        <button type="submit" class="btn btn-success mt-2">üîç Recover Missing Product</button>
                    </form>
                    
                    <form method="post" asp-page-handler="DiagnoseProduct" class="mt-3">
                        <div class="form-group">
                            <label for="diagnoseProductId">Product ID to Diagnose:</label>
                            <input type="text" class="form-control" id="diagnoseProductId" name="productId" 
                                   placeholder="Enter product ID for diagnosis" />
                        </div>
                        <button type="submit" class="btn btn-info mt-2">üî¨ Diagnose Product Status</button>
                    </form>
                    
                    @if (!string.IsNullOrEmpty(Model.RecoveryResult))
                    {
                        <div class="alert alert-success mt-3">
                            <h6>Recovery Result:</h6>
                            <pre>@Model.TestResult</pre>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.DiagnosisResult))
                    {
                        <div class="alert alert-info mt-3">
                            <h6>Diagnosis Result:</h6>
                            <pre>@Model.DiagnosisResult</pre>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>üóëÔ∏è Delete Test Section</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Test Delete Product</h6>
                            <form method="post" asp-page-handler="TestDeleteProduct">
                                <div class="mb-3">
                                    <label for="deleteProductId" class="form-label">Product ID:</label>
                                    <input type="text" class="form-control" id="deleteProductId" name="productId" placeholder="Enter product ID">
                                </div>
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product? This action cannot be undone.')">
                                    <i class="bi bi-trash me-2"></i>Delete Product
                                </button>
                            </form>
                            @if (!string.IsNullOrEmpty(Model.DeleteResult))
                            {
                                <div class="mt-3 p-3 bg-light border rounded">
                                    <h6>Delete Result:</h6>
                                    <pre class="mb-0">@Model.DeleteResult</pre>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <h6>Test Delete Customer</h6>
                            <form method="post" asp-page-handler="TestDeleteCustomer">
                                <div class="mb-3">
                                    <label for="deleteCustomerId" class="form-label">Customer ID:</label>
                                    <input type="text" class="form-control" id="deleteCustomerId" name="customerId" placeholder="Enter customer ID">
                                </div>
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer? This action cannot be undone.')">
                                    <i class="bi bi-trash me-2"></i>Delete Customer
                                </button>
                            </form>
                            @if (!string.IsNullOrEmpty(Model.DeleteCustomerResult))
                            {
                                <div class="mt-3 p-3 bg-light border rounded">
                                    <h6>Delete Customer Result:</h6>
                                    <pre class="mb-0">@Model.DeleteCustomerResult</pre>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-warning" role="alert">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-triangle me-2"></i>Missing Product Alert
                </h6>
                <p class="mb-2">If you're experiencing issues with product retrieval or updates, use the recovery and diagnostic tools above to investigate.</p>
                <hr>
                <p class="mb-0">Common issues include:</p>
                <ul class="mb-0">
                    <li>PartitionKey mismatch between stored and queried data</li>
                    <li>Data corruption or incomplete records</li>
                    <li>Azure Table Storage permission issues</li>
                    <li>ETag conflicts during updates</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
function setProductId(id) {
    document.getElementById('productId').value = id;
    document.getElementById('updateProductId').value = id;
    document.getElementById('deleteProductId').value = id;
}

function setRecoveryId(id) {
    document.getElementById('recoverProductId').value = id;
    document.getElementById('diagnoseProductId').value = id;
}
</script>
